{
  "manifest_version": 3,
  "name": "ContentHub 素材提取器",
  "version": "1.2.0",
  "description": "一键提取小红书、推特等平台的文字和图片内容到ContentHub",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://xiaohongshu.com/*",
    "https://www.xiaohongshu.com/*",
    "https://xhslink.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://weibo.com/*",
    "https://www.weibo.com/*",
    "https://douyin.com/*",
    "https://www.douyin.com/*",
    "https://tiktok.com/*",
    "https://www.tiktok.com/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "提取内容到ContentHub",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://xiaohongshu.com/*",
        "https://www.xiaohongshu.com/*",
        "https://xhslink.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://weibo.com/*",
        "https://www.weibo.com/*",
        "https://douyin.com/*",
        "https://www.douyin.com/*",
        "https://tiktok.com/*",
        "https://www.tiktok.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["tesseract.min.js", "tesseract-worker.min.js"],
      "matches": [
        "https://xiaohongshu.com/*",
        "https://www.xiaohongshu.com/*",
        "https://xhslink.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://weibo.com/*",
        "https://www.weibo.com/*",
        "https://douyin.com/*",
        "https://www.douyin.com/*",
        "https://tiktok.com/*",
        "https://www.tiktok.com/*"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
